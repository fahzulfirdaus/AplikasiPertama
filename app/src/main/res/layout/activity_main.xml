<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTulisan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_terjemahan"
        android:id="@+id/btn_terjemah_id"
        android:onClick="onClickBtnTerjemahInd"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_terjemah_ac"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btn_terjemah_ac"
        android:layout_alignEnd="@+id/btn_terjemah_ac"
        android:capitalize="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_translate"
        android:id="@+id/btn_terjemah_en"
        android:onClick="onClickBtnTerjemahEng"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_terjemah_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:capitalize="none" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tombol_arti"
        android:onClick="onClickBtnTerjemahAch"
        android:id="@+id/btn_terjemah_ac"
        android:layout_below="@+id/txtTulisan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:capitalize="none" />

</RelativeLayout>
